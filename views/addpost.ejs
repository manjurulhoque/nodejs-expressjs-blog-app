<% layout( 'layout' ) -%>

<form method="POST" action="/posts/add" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Post Title:</label>
        <input type="text" class="form-control" name="title" id="title">
    </div>
    <div class="form-group">
        <label for="sel1">Category list:</label>
        <select class="form-control" id="sel1" name="category">
            <% for (var i = 0; i < categories.length; i++) { %>
            <option><%= categories[i].title %></option>
            <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="body">Post Body:</label>
        <textarea class="form-control" name="body" rows="5" id="body"></textarea>
    </div>
    <div class="form-group">
        <label for="image">Image:</label>
        <input type="file" class="form-control" name="image" id="image" accept="application/x-zip-compressed,image/*">
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <select class="form-control" id="author" name="author">
            <option>Rumi</option>
            <option>John Doe</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>